{
  "name": "tradingview-alerts-processor",
  "version": "1.0.0",
  "description": "Minimalist service desgined to execute TradingView webhooks and process them to [FTX](https://ftx.com/) and [Binance](https://www.binance.com/fr/futures) exchanges.",
  "main": "server.js",
  "keywords": [],
  "author": "Thibault YOU",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run lint\" \"npm run prettier:watch\" \"npm run test:watch\" \"nodemon server.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:watch": "onchange 'src/**/*.ts' 'server.ts' -- prettier --write {{changed}}",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' 'server.ts' --write",
    "start": "ts-node server.ts",
    "build": "tsc --project ./",
    "test": "jest",
    "test:cov": "npm run test --coverage",
    "test:watch": "npm run test:cov --watchAll"
  },
  "pre-commit": [
    "lint:fix",
    "prettier:format",
    "test:cov"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./tests/setup.jest.mocks.ts"
    ]
  },
  "dependencies": {
    "babel-jest": "^27.0.0",
    "ccxt": "1.50.18",
    "chalk": "4.1.1",
    "class-transformer": "0.4.0",
    "class-transformer-validator": "0.9.1",
    "class-validator": "0.13.1",
    "express": "4.17.1",
    "node-json-db": "1.3.0",
    "typescript": "4.2.4",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/jest": "26.0.22",
    "@types/node": "15.6.0",
    "@typescript-eslint/eslint-plugin": "4.24.0",
    "@typescript-eslint/parser": "4.24.0",
    "concurrently": "6.1.0",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "26.6.3",
    "nodemon": "2.0.7",
    "onchange": "7.1.0",
    "pre-commit": "1.2.2",
    "prettier": "2.3.0",
    "ts-jest": "26.5.0",
    "ts-node": "9.1.1"
  }
}
